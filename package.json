{
  "name": "drukkar",
  "version": "0.7.0",
  "description": "A JavaScript viewer for Drukkar blog posts.",
  "homepage": "https://github.com/dbohdan/drukkar.js",
  "license": "MIT",
  "author": {
    "name": "dbohdan",
    "url": "http://github.com/dbohdan"
  },
  "files": [
    "drukkar.json",
    "entries/",
    "favicon.ico",
    "files/",
    "index.html",
    "js/",
    "loc_en.json",
    "loc_uk.json",
    "Makefile",
    "make-post-list.py",
    "themes/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dbohdan/drukkar.js.git"
  },
  "dependencies": {
    "immutable": "^3.8.1",
    "marked": "^0.3.6",
    "mithril": "^1.0.0",
    "moment": "^2.17.1"
  },
  "devDependencies": {
    "babel-preset-es2015": "latest",
    "babelify": "latest",
    "browserify": "latest",
    "uglifyify": "^3.0.4",
    "watchify": "latest"
  },
  "scripts": {
    "build-js-dev": "browserify js/main.js -o js/drukkar.js -t [ babelify --presets [ es2015 ] ]",
    "build-js-prod": "browserify js/main.js -o js/drukkar.js -t [ babelify --presets [ es2015 ] ] -g uglifyify",
    "watch-js": "watchify js/main.js -o js/drukkar.js -t [ babelify --presets [ es2015 ] ] -v"
  }
}
